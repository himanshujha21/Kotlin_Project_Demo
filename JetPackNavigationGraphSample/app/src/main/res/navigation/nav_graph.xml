<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/fragA">

    <fragment
        android:id="@+id/fragA"
        android:name="com.example.jetpacknavigationgraphsample.FragA"
        android:label="frag_a"
        tools:layout="@layout/frag_a">
        <action
            android:id="@+id/action_fragA_to_fragB"
            app:destination="@id/fragB"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_fragA_to_fragC"
            app:destination="@id/fragC"
            app:popEnterAnim="@android:animator/fade_in"
            app:popExitAnim="@android:animator/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/fragB"
        android:name="com.example.jetpacknavigationgraphsample.FragB"
        android:label="frag_b"
        tools:layout="@layout/frag_b">
        <action
            android:id="@+id/action_fragB_to_fragC"
            app:destination="@id/fragC" />
    </fragment>
    <fragment
        android:id="@+id/fragC"
        android:name="com.example.jetpacknavigationgraphsample.FragC"
        android:label="frag_c"
        tools:layout="@layout/frag_c">
        <action

            android:id="@+id/action_fragC_to_fragA"
            app:destination="@id/fragA"
            app:popUpTo="@id/fragA"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>